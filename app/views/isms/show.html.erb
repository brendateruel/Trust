<div id="submit-box">
	<p id="notice"><%= notice %></p>

	<p>
	  <b>Description:</b>
	  <%= @ism.description %>
	</p>

	<p>
	  <b>Gender:</b>
	  <%= @ism.gender %>
	</p>

	<p>
	  <b>Category:</b>
	  <%= @ism.category %>
	</p>


	<h2><%= link_to 'Submit another.', new_ism_path %></h2>
	<a href="#" title="Submit your own" id="add">Submit your own.</a>
	<p>Maybe we'll post it. Maybe we won't.</p>
</div>

<%= render 'form' %>

<script type="text/javascript">
$(document).ready(function(){
	$("#submit").hide();
	$("#add").click(function(){
	    $("#submit-box a").toggleClass("toggle");
	    $("#submit").slideToggle("fast");
		return false;
	});
	
	$("input[type=text]").each(function() {
        var search = 'Never Trust Someone Who...';
        var empty = '';
        $(this).attr('value', search);
        $(this).focus(function() {
            if (this.value == search) {
                this.value = empty;
            }
        });
        $(this).blur(function() {
            if (this.value == empty) {
                this.value = search;
            }
        });
    });

});
</script>