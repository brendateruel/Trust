<%= form_for(@ism) do |f| %>
  <% if @ism.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ism.errors.count, "error") %> prohibited this ism from being saved:</h2>

      <ul>
      <% @ism.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </div>
  <div class="field">
	<%= radio_button("ism", "gender", "Male") %>
	<%= label_tag(:gender_Male, "Man") %>
    <%= radio_button("ism", "gender", "Female") %>
	<%= label_tag(:gender_Female, "Woman") %>
  </div>
  <div class="field">
    <%= select("ism", "category", options_for_select([['Food + Drink', Food and Drink], ['Health', 2], ['Fashion', 3]])) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
